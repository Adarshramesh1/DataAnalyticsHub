<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.LoginController">

   <left>
      <AnchorPane prefHeight="230.0" prefWidth="0.0" BorderPane.alignment="CENTER" />
   </left>

   <center>
      <VBox spacing="10" alignment="center" style="-fx-background-color: #b0e0e6;">
         <Label text="Social Media App" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

         <Label text="Username" />
         <TextField fx:id="usernameField" prefHeight="25.0" prefWidth="150.0" />

         <Label text="Password" />
         <PasswordField fx:id="passwordField" prefHeight="25.0" prefWidth="150.0" />

         <Button text="Login" onAction="#loginUser" style="-fx-background-color: #FAF9F6;" />

         <Button text="Register" style="-fx-background-color: #FAF9F6;" />
      </VBox>
   </center>
</BorderPane>
